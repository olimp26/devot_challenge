FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt ./
COPY requirements-dev.txt ./

RUN pip install --no-cache-dir -r requirements-dev.txt

COPY . .

RUN python -m pytest --maxfail=1 --disable-warnings -q

ENV PYTHONPATH=/app
ENV ENVIRONMENT=development

EXPOSE 8000

CMD ["python", "run.py"]
